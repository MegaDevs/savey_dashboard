<!DOCTYPE html>
<html>
<head>
  	<%= stylesheet_link_tag    "application", :media => "all" %>
  	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
</head>
<body>

<div class="content">
	<%= tabs_tag :open_tabs => { :id => "tabs", :class => "menu" } do |tab| %>
  		<%= tab.home      	'Homepage', root_path %>
  		<%= tab.maps 		'Maps', maps_index_path %>
  		<%= tab.statistics	'Statistics', statistics_index_path %>
	<% end %>
	<%= yield %>
</div>
</body>
</html>
